<div class="container">
  <div class="col-md-8 col-md-offset-2  margin-top-5per article-block ">
      <h1 class="text-center"> <%= @article.title %> </h1>
    <div class="image-container">
      <% if @article.image_id.present? %>
        <%= image_tag attachment_url(@article, :image),class:'article-image padding-top-15' %>
      <% else %>
        <%= image_tag 'dog.jpg' ,class:'img-responsive padding-top-15 image-container image-show-width' %>
      <% end %>
      
    </div>
    <div class="padding-bottom-15" style='padding:10px;'>
      <%= simple_format @article.body %>
        <p class="text-right">
          <%= @article.created_at.strftime("%Y年%m月%d日") %>
        </p>
    </div>
    <% if @article.user == current_user %> 
      <%= link_to '編集',edit_article_path(@article),class:'btn btn-primary',style:'margin-bottom:10px;'%>
      <%= link_to '削除する',article_path(@article),method: :delete,data: {confirm: '削除してもよろしいですか?'},class:'btn btn-danger',style:'margin-bottom:10px;'%>
    <% end %>
  </div>
</div>
